{
    "manifest_version": 3,
    "name": "VERO - See What's Real",
    "version": "1.1.0",
    "description": "Real-time misinformation and deepfake detection for WhatsApp Web and Instagram",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://web.whatsapp.com/*",
        "https://www.instagram.com/*",
        "https://generativelanguage.googleapis.com/*",
        "https://newsapi.org/*",
        "https://factcheck.pib.gov.in/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*"
            ],
            "js": [
                "content-whatsapp.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://www.instagram.com/*"
            ],
            "js": [
                "content-instagram.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "fonts/*",
                "feather/*"
            ],
            "matches": [
                "https://web.whatsapp.com/*",
                "https://www.instagram.com/*"
            ]
        }
    ]
}